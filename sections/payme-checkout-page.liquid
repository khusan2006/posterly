{{ 'component-payme-checkout.css' | asset_url | stylesheet_tag }}
<script src="{{ 'payme-checkout.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="payme-checkout-page page-width section-{{ section.id }}-padding">
    <!-- Breadcrumbs -->
    <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
      <a href="{{ routes.cart_url }}" class="breadcrumb__link">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M10 12L6 8L10 4"/>
        </svg>
        {{ 'sections.cart.back_to_cart' | t | default: 'Savatga qaytish' }}
      </a>
    </nav>

    <!-- Page Header -->
    <div class="payme-checkout-header">
      <h1 class="payme-checkout-title">{{ 'sections.cart.payme_checkout_title' | t | default: "Payme orqali to'lov" }}</h1>
      <div class="rte payme-checkout-description">
        <p>{{ 'sections.cart.payme_checkout_description' | t | default: "Buyurtmangizni yakunlash uchun quyidagi ma'lumotlarni kiriting." }}</p>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="payme-checkout-grid">
      <!-- Left Column: Order Summary -->
      <div class="payme-cart-summary-column">
        <h2 class="payme-section-title">{{ 'sections.cart.order_summary' | t | default: 'Buyurtma tafsilotlari' }}</h2>
        <div class="payme-cart-summary">
          <div class="payme-cart-summary__loading">
            <div class="loading-spinner"></div>
            <p>{{ 'general.accessibility.loading' | t | default: 'Yuklanmoqda...' }}</p>
          </div>
          <payme-cart-summary></payme-cart-summary>
        </div>
      </div>

      <!-- Right Column: Payment Form -->
      <div class="payme-form-column">
        <h2 class="payme-section-title">{{ 'sections.cart.payment_information' | t | default: "To'lov ma'lumotlari" }}</h2>
        <div class="payme-form-wrapper">
          {% render 'payme-checkout-form' %}

          <!-- Security Badge Inside Form -->
          {%- if section.settings.show_security_badge -%}
            <div class="payme-security-badge payme-security-badge--inline">
              <svg class="icon" width="18" height="18" viewBox="0 0 16 16" fill="none">
                <path d="M8 1L3 3V7C3 10.5 5.5 13.5 8 14.5C10.5 13.5 13 10.5 13 7V3L8 1Z" stroke="#00CCCC" stroke-width="1.5" fill="none"/>
                <path d="M6 8L7.5 9.5L10 6.5" stroke="#00CCCC" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ 'sections.cart.secure_payment_payme' | t | default: "Xavfsiz to'lov - Payme orqali" }}</span>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Payme Checkout Page",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_security_badge",
      "label": "Show security badge",
      "default": true
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Payme Checkout Page"
    }
  ]
}
{% endschema %}
