{{ 'section-featured-collections.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .featured-collections-{{ section.id }} {
    --fc-card-bg: {{ section.settings.card_background_color }};
    --fc-title-color: {{ section.settings.collection_title_color }};
    --fc-card-padding: {{ section.settings.card_padding }}rem;
    --fc-text-align: {{ section.settings.text_alignment }};
    --fc-items-desktop: {{ section.settings.cards_per_row_desktop | default: 4 }};
    --fc-items-tablet: {{ section.settings.cards_per_row_tablet | default: 2 }};
    --fc-items-mobile: {{ section.settings.cards_per_row_mobile | default: 1.2 }};
  }
{%- endstyle -%}

<section
  class="featured-collections featured-collections-{{ section.id }} color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
  id="featured-collections-{{ section.id }}"
>
  <div class="page-width">
    {%- comment -%} Section Header {%- endcomment -%}
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="fc-header fc-header--{{ section.settings.title_alignment }}">
        <div class="fc-header__text">
          {%- if section.settings.title != blank -%}
            <h2 class="fc-header__title {{ section.settings.heading_size }}">
              {{ section.settings.title }}
            </h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <div class="fc-header__description rte">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>

        <div class="fc-header__controls">
          {%- if section.blocks.size > 1 -%}
            <div class="fc-nav" data-carousel-nav="{{ section.id }}">
              <button type="button" class="fc-nav__btn fc-nav__btn--prev" data-action="prev" aria-label="{{ 'general.slider.previous_slide' | t }}" disabled>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
              <button type="button" class="fc-nav__btn fc-nav__btn--next" data-action="next" aria-label="{{ 'general.slider.next_slide' | t }}">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          {%- endif -%}

          {%- if section.settings.show_view_all and section.settings.view_all_url != blank -%}
            <a href="{{ section.settings.view_all_url }}" class="fc-header__view-all">
              {{ 'sections.collection_list.view_all' | t }}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Collections Carousel {%- endcomment -%}
    {%- if section.blocks.size > 0 -%}
      <div
        class="fc-carousel"
        id="fc-carousel-{{ section.id }}"
        data-carousel
        data-section-id="{{ section.id }}"
      >
        <div class="fc-carousel__track">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'collection' -%}
                {%- liquid
                  assign collection = block.settings.collection
                  assign custom_title = block.settings.custom_title
                  assign custom_image = block.settings.custom_image
                  assign custom_bg_color = block.settings.background_color

                  assign card_title = custom_title | default: collection.title | default: 'Collection'
                  assign card_image = custom_image | default: collection.featured_image
                  assign card_url = collection.url | default: '#'
                -%}

                <div class="fc-carousel__slide" {{ block.shopify_attributes }}>
                  <a href="{{ card_url }}" class="fc-card" {% if custom_bg_color != blank %}style="--fc-card-bg: {{ custom_bg_color }};"{% endif %}>
                    <div class="fc-card__content">
                      <h3 class="fc-card__title">{{ card_title }}</h3>
                    </div>
                    <div class="fc-card__media">
                      {%- if card_image -%}
                        <img
                          src="{{ card_image | image_url: width: 600 }}"
                          srcset="{{ card_image | image_url: width: 300 }} 300w,
                                  {{ card_image | image_url: width: 450 }} 450w,
                                  {{ card_image | image_url: width: 600 }} 600w"
                          sizes="(min-width: 990px) 25vw, (min-width: 750px) 33vw, 80vw"
                          alt="{{ card_image.alt | escape | default: card_title }}"
                          loading="lazy"
                          width="300"
                          height="300"
                          class="fc-card__image"
                        >
                      {%- else -%}
                        <div class="fc-card__placeholder">
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5"/>
                            <path d="M21 15l-5-5L5 21"/>
                          </svg>
                        </div>
                      {%- endif -%}
                    </div>
                    {%- if section.settings.show_descriptions and collection.description != blank -%}
                      <p class="fc-card__description">{{ collection.description | strip_html | truncatewords: 10 }}</p>
                    {%- endif -%}
                  </a>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>

        {%- comment -%} Mobile Pagination Dots {%- endcomment -%}
        {%- if section.blocks.size > 1 -%}
          <div class="fc-carousel__dots" data-carousel-dots="{{ section.id }}">
            {%- for block in section.blocks -%}
              <button
                type="button"
                class="fc-carousel__dot{% if forloop.first %} is-active{% endif %}"
                data-index="{{ forloop.index0 }}"
                aria-label="{{ 'general.slider.slide' | t }} {{ forloop.index }}"
              ></button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

    {%- else -%}
      {%- comment -%} Placeholder State {%- endcomment -%}
      <div class="fc-carousel" id="fc-carousel-{{ section.id }}">
        <div class="fc-carousel__track">
          {%- for i in (1..4) -%}
            <div class="fc-carousel__slide">
              <div class="fc-card">
                <div class="fc-card__content">
                  <h3 class="fc-card__title">{{ 'onboarding.collection_title' | t }}</h3>
                </div>
                <div class="fc-card__media">
                  <div class="fc-card__placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <path d="M21 15l-5-5L5 21"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
  // Featured Collections Carousel - Simple & Mobile-Friendly
  (function() {
    const initCarousel = (carousel) => {
      const sectionId = carousel.dataset.sectionId;
      const track = carousel.querySelector('.fc-carousel__track');
      const slides = carousel.querySelectorAll('.fc-carousel__slide');
      const nav = document.querySelector(`[data-carousel-nav="${sectionId}"]`);
      const dots = document.querySelector(`[data-carousel-dots="${sectionId}"]`);

      if (!track || slides.length === 0) return;

      let currentIndex = 0;
      let startX = 0;
      let currentX = 0;
      let isDragging = false;

      // Get items per view based on screen size
      const getItemsPerView = () => {
        const style = getComputedStyle(carousel.closest('.featured-collections'));
        if (window.innerWidth >= 990) {
          return parseInt(style.getPropertyValue('--fc-items-desktop')) || 4;
        } else if (window.innerWidth >= 750) {
          return parseInt(style.getPropertyValue('--fc-items-tablet')) || 2;
        }
        return parseFloat(style.getPropertyValue('--fc-items-mobile')) || 1.2;
      };

      // Get max scroll index
      const getMaxIndex = () => {
        const itemsPerView = getItemsPerView();
        return Math.max(0, slides.length - Math.floor(itemsPerView));
      };

      // Update navigation state
      const updateNav = () => {
        if (nav) {
          const prevBtn = nav.querySelector('[data-action="prev"]');
          const nextBtn = nav.querySelector('[data-action="next"]');
          if (prevBtn) prevBtn.disabled = currentIndex <= 0;
          if (nextBtn) nextBtn.disabled = currentIndex >= getMaxIndex();
        }

        // Update dots
        if (dots) {
          const allDots = dots.querySelectorAll('.fc-carousel__dot');
          allDots.forEach((dot, i) => {
            dot.classList.toggle('is-active', i === currentIndex);
          });
        }
      };

      // Scroll to index
      const scrollToIndex = (index) => {
        const maxIndex = getMaxIndex();
        currentIndex = Math.max(0, Math.min(index, maxIndex));

        const slide = slides[currentIndex];
        if (slide) {
          const scrollLeft = slide.offsetLeft - track.offsetLeft;
          track.scrollTo({ left: scrollLeft, behavior: 'smooth' });
        }

        updateNav();
      };

      // Navigation click handlers
      if (nav) {
        nav.addEventListener('click', (e) => {
          const btn = e.target.closest('[data-action]');
          if (!btn) return;

          if (btn.dataset.action === 'prev') {
            scrollToIndex(currentIndex - 1);
          } else if (btn.dataset.action === 'next') {
            scrollToIndex(currentIndex + 1);
          }
        });
      }

      // Dots click handler
      if (dots) {
        dots.addEventListener('click', (e) => {
          const dot = e.target.closest('.fc-carousel__dot');
          if (dot) {
            scrollToIndex(parseInt(dot.dataset.index));
          }
        });
      }

      // Touch/swipe support
      track.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        isDragging = true;
      }, { passive: true });

      track.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        currentX = e.touches[0].clientX;
      }, { passive: true });

      track.addEventListener('touchend', () => {
        if (!isDragging) return;
        isDragging = false;

        const diff = startX - currentX;
        const threshold = 50;

        if (Math.abs(diff) > threshold) {
          if (diff > 0) {
            scrollToIndex(currentIndex + 1);
          } else {
            scrollToIndex(currentIndex - 1);
          }
        }

        startX = 0;
        currentX = 0;
      });

      // Scroll event to sync current index
      let scrollTimeout;
      track.addEventListener('scroll', () => {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(() => {
          const slideWidth = slides[0]?.offsetWidth || 0;
          const gap = parseFloat(getComputedStyle(track).gap) || 0;
          const scrollLeft = track.scrollLeft;
          currentIndex = Math.round(scrollLeft / (slideWidth + gap));
          updateNav();
        }, 100);
      }, { passive: true });

      // Handle resize
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          updateNav();
        }, 250);
      });

      // Initial state
      updateNav();
    };

    // Initialize all carousels
    const init = () => {
      document.querySelectorAll('[data-carousel]').forEach(initCarousel);
    };

    // Run on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }

    // Re-init for Shopify theme editor
    if (Shopify.designMode) {
      document.addEventListener('shopify:section:load', (e) => {
        const carousel = e.target.querySelector('[data-carousel]');
        if (carousel) initCarousel(carousel);
      });
    }
  })();
</script>

