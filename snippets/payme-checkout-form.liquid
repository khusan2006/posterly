<payme-checkout-form class="payme-checkout-form__container">
  <form id="PaymeCheckoutForm" class="payme-form">
    <div class="payme-checkout-form__error" role="alert" aria-live="polite"></div>

    <div class="payme-checkout-form__fields">
      <div class="field">
        <input
          class="field__input"
          autocomplete="tel"
          type="tel"
          id="Payme-phone"
          name="phone"
          pattern="^\+998\d{9}$"
          required
          placeholder="+998 XX XXX XX XX"
          aria-required="true"
        >
        <label class="field__label" for="Payme-phone">
          {{ 'sections.cart.phone_number' | t | default: 'Telefon raqami' }}
          <span aria-hidden="true">*</span>
        </label>
      </div>

      <div class="field">
        <input
          class="field__input"
          autocomplete="name"
          type="text"
          id="Payme-name"
          name="name"
          minlength="2"
          required
          placeholder="{{ 'sections.cart.full_name_placeholder' | t | default: 'Ismingizni kiriting' }}"
          aria-required="true"
          value="{% if customer %}{{ customer.name }}{% endif %}"
        >
        <label class="field__label" for="Payme-name">
          {{ 'sections.cart.full_name' | t | default: "To'liq ism" }}
          <span aria-hidden="true">*</span>
        </label>
      </div>

      <div class="field">
        <input
          class="field__input"
          autocomplete="address-level2"
          type="text"
          id="Payme-location"
          name="location"
          minlength="2"
          required
          placeholder="{{ 'sections.cart.city_placeholder' | t | default: 'Shahringizni tanlang' }}"
          list="Payme-cities"
          aria-required="true"
        >
        <label class="field__label" for="Payme-location">
          {{ 'sections.cart.city' | t | default: 'Shahar' }}
          <span aria-hidden="true">*</span>
        </label>
        <datalist id="Payme-cities">
          <option value="Toshkent">
          <option value="Samarqand">
          <option value="Buxoro">
          <option value="Andijon">
          <option value="Namangan">
          <option value="Farg'ona">
          <option value="Nukus">
          <option value="Qarshi">
          <option value="Termiz">
          <option value="Urganch">
          <option value="Jizzax">
          <option value="Guliston">
          <option value="Navoiy">
          <option value="Chirchiq">
          <option value="Olmaliq">
          <option value="Marg'ilon">
          <option value="Qo'qon">
        </datalist>
      </div>

      <div class="field">
        <input
          class="field__input"
          autocomplete="email"
          type="email"
          id="Payme-email"
          name="email"
          required
          spellcheck="false"
          autocapitalize="off"
          placeholder="{{ 'sections.cart.email_placeholder' | t | default: 'email@example.com' }}"
          aria-required="true"
          value="{% if customer %}{{ customer.email }}{% endif %}"
        >
        <label class="field__label" for="Payme-email">
          {{ 'sections.cart.email' | t | default: "Email" }}
          <span aria-hidden="true">*</span>
        </label>
      </div>
    </div>

    <div class="payme-checkout-form__actions">
      <button type="submit" class="button button--primary payme-submit-btn" id="Payme-submit">
        <span class="payme-submit-btn__icon">
          <img src="{{ 'payme.png' | asset_url }}" alt="Payme" width="70" height="24">
        </span>
        <span class="payme-submit-btn__text">{{ 'sections.cart.submit_order' | t | default: "Buyurtmani tasdiqlash" }}</span>
      </button>
    </div>
  </form>
</payme-checkout-form>
